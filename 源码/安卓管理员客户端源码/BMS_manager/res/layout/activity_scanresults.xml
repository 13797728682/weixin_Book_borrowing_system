<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <LinearLayout 
       android:id="@+id/ll_false"
       android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@drawable/background2"
      android:visibility="invisible" >
        <ImageView 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/error"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"
            
            />
        <TextView 
              android:layout_gravity="center_horizontal"
             android:layout_width="120dp"
             android:layout_height="50dp"
             android:text="二维码过期或读取信息有误"
             android:gravity="center"
             android:textColor="#fa6062"
             android:textSize="20dp"/>
             
       <ImageView 
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
           android:layout_width="250dp"
           android:layout_height="20dp"
           android:src="@drawable/line2"/>
       <Button 
           android:id="@+id/btn_rescan"
           android:layout_width="180dp"
           android:layout_height="45dp"
           android:text="重新扫描"
           android:layout_marginTop="70dp"
           android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_selector"
                 android:textColor="@drawable/btn_textcolor"
           />
  
   </LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:id="@+id/ll_true" 
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="借书人：17865923521"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="张丰业"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="书名"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编号"
            android:textColor="#fff"
            android:textSize="16sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_CheckOk"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_selector"
            android:text="确定"
            android:textColor="@drawable/btn_textcolor" />
    </LinearLayout>

</LinearLayout>
</FrameLayout>