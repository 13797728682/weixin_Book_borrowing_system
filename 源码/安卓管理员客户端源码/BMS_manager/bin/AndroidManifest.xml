<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.sdut.bms_manager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="25" />
    <!-- android:theme="@android:style/Theme.Light.NoTitleBar" -->

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo1"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register.Register"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".register.RegisterTwo"
            android:label="@string/title_activity_register_two" >
        </activity>
        <activity
            android:name=".register.RegisterThree"
            android:label="@string/title_activity_register_three" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".forgetpwd.ForgetPWDActivity"
            android:label="@string/title_activity_forget_pwd" >
        </activity>
        <activity
            android:name=".forgetpwd.ReSetPwd"
            android:label="@string/title_activity_re_set_pwd" >
        </activity>
        <activity
            android:name=".scan.activity.CaptureActivity"
            android:label="@string/title_activtiy_capture"
            android:screenOrientation="portrait" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.DELETE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".result.ResultActivity"
            android:label="@string/title_activity_result1" >
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".result.ResultActivity2"
            android:label="@string/title_activity_result_activity2" >
        </activity>
        <activity
            android:name="cn.sdut.bms_manager.myhistory.MyActivity"
            android:label="@string/title_activity_my" >
        </activity>
        <activity
            android:name="cn.sdut.bms_manager.myhistory.RecordActivity"
            android:label="@string/title_activity_record" >
        </activity>
    </application>

</manifest>
