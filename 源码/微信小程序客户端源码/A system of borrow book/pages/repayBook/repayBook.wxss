/* pages/repayBook/repayBook.wxss */
.bookitem{
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  padding: 45rpx;
  position: relative;
  border-bottom: 2rpx solid #dddddd;
}
.bookitem image{
  width: 180rpx;
  height: 200rpx;
  border: 2rpx solid #eeeeee;
}
 .bookitem text{
    display: block;
    width: 300rpx;
    color: #aaaaaa;
    font-size: 30rpx;
    padding: 6rpx 0;
 }
 .bookitem text:nth-child(2){
   height: 100rpx;
   color: #666666;
 }
 .bookitem button{
   height: 50rpx;
   width: 160rpx;
   border: 2rpx solid;
   color: #7cb342;
   font-size: 30rpx;
   line-height: 50rpx;
   background: #ffffff;
   position: absolute;
   bottom: 10rpx;
 }
 .tips{
   text-align: center;
   margin-bottom: 400rpx;
   color: #bbbbbb;

 }
