/* pages/borrowHistory/borrowHistory.wxss */

.container {
  font-size: 30rpx;
}

.header {
  margin: 20rpx 0;
}

.header text {
  color: #101010;
}

.header text:first-child {
  margin-left: 200rpx;
  margin-right: 80rpx;
}

.header text:nth-child(2) {
  margin-right: 80rpx;
}

.item {
  height: 200rpx;
  border-bottom: 2rpx solid #cccccc;
  color: #aaa;
  width: 750rpx;
  margin-top: 100rpx;
}

.item text {
  display: table-cell;
  vertical-align: middle;
  width: 160rpx;
  padding-left: 30rpx;
}

image {
  width: 140rpx;
  height: 180rpx;
  display: table-cell;
}
.tips{
  text-align: center;
  color: #cccccc;
  font-size: 30rpx;
}